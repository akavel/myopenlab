import VisualLogic.*;
import VisualLogic.variables.*;
import tools.*;

import java.awt.*;
import java.awt.event.*;


public class DBL2STR extends JVSMain
{
  private Image image;
  private VSDouble in;
  private VSString out= new VSString();

  public void onDispose()
  {
    if (image!=null)
    {
      image.flush();
      image=null;
    }
  }
  
  public void paint(java.awt.Graphics g)
  {
    drawImageCentred(g,image);
  }

  public void init()
  {
    initPins(0,1,0,1);
    setSize(40,25);
    element.jSetInnerBorderVisibility(false);
    element.jSetTopPinsVisible(false);
    element.jSetBottomPinsVisible(false);

    image=element.jLoadImage(element.jGetSourcePath()+"icon.gif");
    
    setPin(0,ExternalIF.C_STRING,element.PIN_OUTPUT);
    setPin(1,ExternalIF.C_DOUBLE,element.PIN_INPUT);
    element.jSetPinDescription(0,"Out");
    element.jSetPinDescription(1,"In");

    setName("DBL->Str");
  }
  

  public void initInputPins()
  {
    in=(VSDouble)element.getPinInputReference(1);
  }

  public void initOutputPins()
  {
    element.setPinOutputReference(0,out);
  }



  public void process()
  {
    if (in!=null)
    {
      if (in.isChanged())
      {
         out.setValue(""+in.getValue());
         out.setChanged(true);
      } else out.setChanged(false);
    }
  }


}

